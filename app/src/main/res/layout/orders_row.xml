<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:background="@drawable/ash_color_background"
    app:cardElevation="3dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/foodIcon"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/titleFav"
            android:fontFamily="@font/gilroy"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="#F32D13"
            android:textStyle="bold"
            android:layout_toRightOf="@id/foodIcon"
            android:layout_toEndOf="@id/foodIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Discription"
            android:id="@+id/disFave"
            android:fontFamily="@font/gilroy"
            android:textSize="13dp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@id/foodIcon"
            android:layout_toEndOf="@id/foodIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/titleFav"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="34dp"
            android:layout_below="@+id/disFave"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/foodIcon"
            android:layout_toRightOf="@+id/foodIcon"
            android:text="Remove"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#ff2f00"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>